@model TeamA.Models.MembershipType

@{
    ViewData["Title"] = $"Edit {@Model.MembershipTypeName}";
}

<h2>Edit Membership Type: @Model.MembershipTypeName</h2>

<h4>Membership Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MembershipTypeName" class="control-label">Membership Type Name</label>
                <input asp-for="MembershipTypeName" class="form-control" disabled />
                <span asp-validation-for="MembershipTypeName" class="text-danger"></span>
                <input type="hidden" asp-for="MembershipTypeName" />
            </div>            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatioToFull" class="control-label">Ratio-To-Full</label>
                <input asp-for="RatioToFull" class="form-control" />
                <span asp-validation-for="RatioToFull" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
